extends layout
block content

    .mediumSlice
        .flexRow
            h3 Manager Your Servers
    .largeSlice
        .flexRow
            table.table
                tr.tableRow
                    th.tableHeader Server Name
                    th.tableHeader Image
                    th.tableHeader IP Address
                    th.tableHeader Status
                for container in userContainersDocker
                    tr.tableRow
                        td.tableData #{container.name}
                        td.tableData #{container.image}
                        td.tableData #{whaleIP}
                            for port in container.ports
                                span #{port}
                        td.tableData 
                            .w3-dropdown-hover
                                button.w3-button.w3-black #{container.status}
                                .w3-dropdown-content.w3-bar-block.w3-border
                                    -if(container.status!=='exited') 
                                        a.w3-bar-item.w3-button(href='#') Stop 
                                    -if(container.status!=='running') 
                                        a.w3-bar-item.w3-button(href='#') Run
                                    -if(container.status!=='removing') 
                                        a.w3-bar-item.w3-button(href='#') Delete Server
                                    -if(container.status!=='restarting') 
                                        a.w3-bar-item.w3-button(href='#') Restart Server


                tr.tableRow 
                    td.tableData Minecraft
                    td.tableData Image
                    td.tableData Ip Address
                    td.tableData Status


